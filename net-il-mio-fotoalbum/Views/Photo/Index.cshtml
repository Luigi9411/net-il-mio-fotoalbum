@model Photo[]

@{
    ViewData["Title"] = "My pizzas";
    var photos = Model;
}

@if (User.IsInRole("Admin"))
{
    <div class="pad">
        <a href="@Url.Action("Create", "Photo")">Nuova Foto</a>
    </div>
}

@if (photos.Length is 0)
{
    <p>No post to display :\</p>
}
else
{

    <ul class="d-flex  mt-3 justify-content-center" style="list-style-type:none;">
        @foreach (var photo in photos)
        {
            @await Html.PartialAsync("_PhotoRow" , photo)
            ;
        }
    </ul>
}
